<Window x:Class="VideoScreenSaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoScreenSaver"
        mc:Ignorable="d" Background="Black"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" MouseMove="Window_MouseMove" KeyDown="Window_KeyDown" MouseDown="Window_MouseDown">
    <Grid>
        <TextBlock x:Name="txtTime" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontFamily="Consolas"/>
        <MediaElement x:Name="player" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MediaFailed="player_MediaFailed" MediaEnded="player_MediaEnded" UnloadedBehavior="Manual"/>
    </Grid>
</Window>
